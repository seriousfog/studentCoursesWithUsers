extends ../layout

block content
    div.form-container
        h3 Login
        form(action='/login' method='post')
            div.form-input
                label(form='email') Email
                input(id='email' name='email')
            div.form-input
                label(form='password') Password
                input(id='password' name='password' type='password')
            div.form-buttons
                button.button.primary(type='submit') Login
        each message in errorMessages
            p= message